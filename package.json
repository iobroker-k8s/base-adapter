{
    "name": "base-adapter",
    "version": "0.0.1",
    "description": "Base setup for ioBroker Kubernetes adapters",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc --build tsconfig.build.json",
        "dev": "npm run build && node build/index.js",
        "test": "echo 'TODO: get jest working'",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "format:check": "prettier --check src/**/*.ts",
        "start": "ts-node src/index.ts",
        "postinstall": "patch-package --exclude nothing"
    },
    "keywords": [
        "iobroker",
        "kubernetes",
        "k8s",
        "adapter"
    ],
    "author": "UncleSamSwiss",
    "license": "MIT",
    "engines": {
        "node": ">=24.0.0"
    },
    "dependencies": {
        "iobroker.js-controller": "^7.0.7",
        "patch-package": "^8.0.0",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "@iobroker/eslint-config": "^2.2.0",
        "@iobroker/types": "^7.0.7",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "@types/yargs": "^17.0.33",
        "@typescript-eslint/eslint-plugin": "^8.44.0",
        "@typescript-eslint/parser": "^8.44.0",
        "eslint": "^9.36.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    }
}
